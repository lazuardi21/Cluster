
@{
    ViewBag.Title = "DataVisExt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DataVis</h2>

<!doctype html>
<html>
<head>
    <script src="~/Scripts/d3.v6.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.js" charset="utf-8"></script>
    <style>
        svg rect {
            fill: orange;
        }

        svg text {
            fill: white;
            font: 10px sans-serif;
            text-anchor: end;
        }
    </style>
</head>
    <body>
        <svg width="600" height="500"></svg>
        <script>

            var apiBaseUrl = "https://localhost:44375/";
            $(function () {


                var yearData;
                var salesData;

               
               
                $.ajax({
                    type: "GET",
                    url: apiBaseUrl + 'api/GMSL',
                    data: '{}',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        debugger
                        yearData = GetYears(data)
                        salesData = GetSales(data)
                        $.each(data, function (d) {
                            
                                //result.date_time = d.date_time
                                //result.cl = d.cl
                                //result.op = d.op
   
                        });

                        var margin = {
                            top: 40,
                            right: 30,
                            bottom: 30,
                            left: 40
                        },
                            width = 1000 - margin.left - margin.right,
                            height = 500 - margin.top - margin.bottom;

                        var chart = d3.select("div")
                            .append("svg") //append svg element inside #chart
                            .attr("width", width + (2 * margin.left) + margin.right) //set width
                            .attr("height", height + margin.top + margin.bottom); //set height


                        var x = d3.scale.ordinal().domain(yearData).rangePoints([margin.left, width]);
                        var y = d3.scale.linear().domain(salesData).range([height, 0]);


                        var xAxis = d3.svg.axis()
                            .scale(x)
                            .orient("bottom").ticks(data.DATE_TIME); //orient bottom because x-axis will appear below the bars

                        var yAxis = d3.svg.axis()
                            .scale(y)
                            .orient("left").ticks(10);

                        // Define the line
                        var valueline = d3.svg.line()
                            .x(function (d) {
                                return x(d.DATE_TIME.split('T')[0]);
                            })
                            .y(function (d) {
                                return y(d.OP);
                            });

                        chart.append("g")
                            .attr("class", "x axis")
                            .attr("transform", "translate(0," + height + ")")
                            .call(xAxis);

                        chart.append("g")
                            .attr("class", "y axis")
                            .attr("transform", "translate(" + margin.left + ",0)")
                            .call(yAxis)
                            .append("text")
                            .attr("transform", "rotate(-90)")
                            .attr("y", 6)
                            .attr("dy", ".71em")
                            .style("text-anchor", "end")
                            .text("Sales Data");

                        // Add the valueline path.
                        chart.append("path")
                            .attr("class", "line")
                            .attr("d", valueline(data))
                            .attr("stroke", "yellow")
                            .attr("fill", "none");

                        function GetYears(data) {
                            var result = [];
                            for (var i in data)
                              result.push(data[i].DATE_TIME.split('T')[0]);

                            return result;
                        }

                        function GetSales(data) {
                            var result = [];
                            var max = 0.0;
                            result.push(max);
                            for (var i in data) {
                                if (max < data[i].OP) {
                                    max = data[i].OP
                                }
                            }
                            result.push(max);

                            return result;
                        }

                       
                        
                    },
                    error: function (msg) {
                        $("#result").text(msg);
                    }
                });
            });
            
        </script>
    </body>
</html>